<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui form segment" methor="post">
      <div class="field required">
        <label>用户名</label>
        <input placeholder="用户名" type="text" name="username" class="username">
      </div>
      <div class="field required">
        <label>密码</label>
        <input placeholder="密码" type="password" name="password" class="password">
      </div>
      <input type="button" class="login ui button fluid" value="登录">
    </div>
  </form>
</div>
<div class="err"></div>
<%= error %>

<script>
    $(".login").click(function(){

      var data = {
        username: $(".username").val(),
        password: $(".password").val()
      }
      $.post("/signin",{
        username: $(".username").val(),
        password: $(".password").val()
      })
      .done(function(data){
        if (data.err) {
          $(".err").html(data.err);
        }
        if(data.success) {
          window.location.href = '/news';
        }
        console.log(data);
      })
      .fail(function(err){
        console.log(err);
      });
    });
  </script>

<%- include('footer') %>