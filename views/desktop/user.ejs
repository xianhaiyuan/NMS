<script>
	!function(){
		$('.ui.dropdown').dropdown();
		$('#submit').click(function(){
			var name = $('#name');
			var avatar = $('#avatar');
			var resume = $('#resume');
			if (!(name.val().length >= 1 && name.val().length <=10)){
		    $(".err").html('姓名请限制在 1-10 个字符。');
		    return false;
		  }
	/*	  if($("#avatar").val() === ""){
		    $(".err").html('缺少头像');
		    return false;
		  } */
