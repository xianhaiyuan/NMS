						<li><a href="#">专栏设置</a></li>
					</ul>
				</div>
			</div>
			<div class="user-c">
				<form enctype="multipart/form-data" method="post" name="userinfo" action="" id="userinfo"></form>
				<div class="tit">
					常规设置
				</div>
				<ul class="clearfix">
					<li>
						<div class="username">
							<label>姓名:</label>
							<input type="text" id="name" name="name" value="<%= user.name %>" form="userinfo">
						</div>
					</li>
					<li>
						<div class="avatar-c">
					        <label>头像:</label>
					        <div class="avatar-pic">
					        	选择文件
					        	<input type="file" id="avatar" name="avatar" form="userinfo">
					        </div>
				     	</div>
					</li>
					<li>
						<div class="resume">
					        <label>个人简介:</label>
					        <textarea name="resume" id="resume" rows="5" form="userinfo"><%= user.resume %></textarea>
				      </div>
					</li>
				</ul>
				<div class="btn">
					保存设置
					<input type="submit" id="submit" name="submit" form="userinfo">
				</div>
				<div class="err"></div>
			</div>
		</div>
	</div>
